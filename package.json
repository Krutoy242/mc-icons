{
  "packageManager": "pnpm@7.8.0",
  "name": "mc-icons",
  "version": "1.1.6",
  "description": "Parsing markdown file to replace item names into item icons.",
  "main": "./build/index.js",
  "bin": "./build/cli.js",
  "repository": "https://github.com/Krutoy242/E2E-E-icons",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "tsc",
    "preparse": "ts-node src/tool/preparse.ts --mc=\"D:/mc_client/Instances/Enigmatica2Expert - Extended\" --icons=\"E:/dev/E2E-E-icons/x32\"",
    "preparse --no-overwrite": "ts-node src/tool/preparse.ts --no-overwrite --mc=\"D:/mc_client/Instances/Enigmatica2Expert - Extended\" --icons=\"E:/dev/E2E-E-icons/x32\""
  },
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "@committed/trie-search": "^0.1.0",
    "chalk": "^4.1.2",
    "fast-levenshtein": "^3.0.0",
    "fs-extra": "^10.0.1",
    "lodash": "^4.17.21",
    "terminal-kit": "^2.4.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@types/fast-levenshtein": "^0.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.180",
    "@types/node": "^18.6.5",
    "@types/object-hash": "^2.2.1",
    "@types/pngjs": "^6.0.1",
    "@types/terminal-kit": "^1.28.4",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "boxen": "5.1.2",
    "eslint": "^8.12.0",
    "eslint-config-alloy": "^4.6.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "^3.2.11",
    "log-update": "^4.0.0",
    "mc-gatherer": "^1.2.0",
    "mc-iexporter-iterator": "^1.0.1",
    "object-hash": "^3.0.0",
    "pngjs": "^6.0.0",
    "prettier": "^2.6.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "files": [
    "build",
    "README.md",
    "assets"
  ],
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "htmlWhitespaceSensitivity": "ignore",
    "bracketSpacing": true,
    "arrowParens": "always",
    "rangeStart": 0,
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": [
        "tsconfig.json"
      ],
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "node_modules",
      "build",
      "coverage"
    ],
    "plugins": [
      "import",
      "eslint-comments",
      "functional"
    ],
    "extends": [
      "alloy",
      "alloy/typescript"
    ],
    "globals": {
      "BigInt": true,
      "console": true,
      "WebAssembly": true
    },
    "rules": {
      "guard-for-in": "off",
      "max-nested-callbacks": "off",
      "no-sequences": "off",
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/no-parameter-properties": 0,
      "max-params": "off",
      "no-return-assign": "off",
      "no-unused-expressions": "error",
      "no-else-return": 2,
      "no-template-curly-in-string": 2,
      "require-atomic-updates": 2,
      "no-duplicate-imports": 2,
      "no-promise-executor-return": 2,
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": 0,
      "eslint-comments/disable-enable-pair": [
        "error",
        {
          "allowWholeFile": true
        }
      ],
      "eslint-comments/no-unused-disable": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true,
          "ignoreCase": true
        }
      ]
    }
  }
}
