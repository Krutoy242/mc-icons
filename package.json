{
  "packageManager": "pnpm@8.6.11",
  "name": "mc-icons",
  "version": "1.4.0",
  "description": "Parsing markdown file to replace item names into item icons.",
  "main": "./build/index.js",
  "bin": "./build/cli.js",
  "repository": "https://github.com/Krutoy242/E2E-E-icons",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "add-new-images": "git add -f ./i/",
    "release": "tsc && release-it",
    "test run": "ts-node src/cli.ts README.md",
    "preparse": "ts-node src/tool/preparse.ts --mc=D:/mc_client/Instances/E2E-E --icons=icon-exports-x64 --modpack=e2ee",
    "preparse --no-overwrite": "ts-node src/tool/preparse.ts --no-overwrite --mc=D:/mc_client/Instances/E2E-E --icons=icon-exports-x64 --modpack=e2ee",
    "preparse Herodotus": "ts-node src/tool/preparse.ts --no-overwrite --mc=\"D:/mc_client/Instances/Herodotus\" --modpack=herodotus"
  },
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "@committed/trie-search": "^0.1.0",
    "chalk": "^4.1.2",
    "fast-levenshtein": "^3.0.0",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "terminal-kit": "^3.0.0",
    "typescript-memoize": "^1.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/fast-levenshtein": "^0.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.6",
    "@types/object-hash": "^3.0.2",
    "@types/pngjs": "^6.0.1",
    "@types/terminal-kit": "^2.5.1",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "boxen": "5.1.2",
    "canvas": "^2.10.2",
    "eslint": "^8.46.0",
    "eslint-config-alloy": "^5.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fast-glob": "^3.3.1",
    "log-update": "^4.0.0",
    "mc-gatherer": "^1.3.8",
    "mc-iexporter-iterator": "^1.0.1",
    "object-hash": "^3.0.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "build",
    "README.md",
    "assets"
  ],
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "htmlWhitespaceSensitivity": "ignore",
    "bracketSpacing": true,
    "arrowParens": "always",
    "rangeStart": 0,
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": [
        "tsconfig.json"
      ],
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "node_modules",
      "build",
      "coverage"
    ],
    "plugins": [
      "import",
      "eslint-comments",
      "functional"
    ],
    "extends": [
      "alloy",
      "alloy/typescript"
    ],
    "globals": {
      "BigInt": true,
      "console": true,
      "WebAssembly": true
    },
    "rules": {
      "guard-for-in": "off",
      "max-nested-callbacks": "off",
      "no-sequences": "off",
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/no-parameter-properties": 0,
      "max-params": "off",
      "no-return-assign": "off",
      "no-unused-expressions": "error",
      "no-else-return": 2,
      "no-template-curly-in-string": 2,
      "require-atomic-updates": 2,
      "no-duplicate-imports": 2,
      "no-promise-executor-return": 2,
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": 0,
      "eslint-comments/disable-enable-pair": [
        "error",
        {
          "allowWholeFile": true
        }
      ],
      "eslint-comments/no-unused-disable": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true,
          "ignoreCase": true
        }
      ]
    }
  }
}
